<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Version</th>
    <th>Description</th>
    <th>Relnotes</th>
    <th>Pub date</th>
    <th>Enclosure name</th>
    <th>Enclosure type</th>
    <th>Enclosure length</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.version %></td>
    <td><%= item.description %></td>
    <td><%= item.relnotes %></td>
    <td><%= item.pub_date %></td>
    <td><%= item.enclosure_name %></td>
    <td><%= item.enclosure_type %></td>
    <td><%= item.enclosure_length %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

