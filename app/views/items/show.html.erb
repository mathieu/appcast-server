
<table class="table table-striped table-condensed">
  <tr><td>Title:</td><td><%= @item.title %></td></tr>
  <tr><td>Version:</td><td><%= @item.version %></td></tr>
  <tr><td>Relnotes:</td><td><%= raw(@item.relnotes) %></td></tr>
  <tr><td>Pub date:</td><td><%= @item.pub_date %></td></tr>
  <tr><td>Enclosure file name:</td><td><%= @item.enclosure_file_name %></td></tr>
  <tr><td>Enclosure content type:</td><td><%= @item.enclosure_content_type %></td></tr>
  <tr><td>Enclosure file size:</td><td><%= @item.enclosure_file_size %></td></tr>
  <tr><td>Enclosure Mac file name:</td><td><%= @item.enclosure_mac_file_name %></td></tr>
  <tr><td>Enclosure Mac content type:</td><td><%= @item.enclosure_mac_content_type %></td></tr>
  <tr><td>Enclosure Mac file size:</td><td><%= @item.enclosure_mac_file_size %></td></tr>
</table>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              product_items_path(@product), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_item_path(@product, @item), :class => 'btn btn-success' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_item_path(@product, @item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>