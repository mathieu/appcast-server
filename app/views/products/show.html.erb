<table class="table table-striped table-condensed">
  <tr><td>Title:</td><td><%= @product.title %></td>
  <tr><td>Name:</td><td><%= @product.name %></td>
  <tr><td>Description:</td><td><%= @product.description %></td>
  <tr><td>appcast:</td><td><%= link_to product_url(@product)+ '.xml', product_url(@product) + '.xml' %></td>
</table>

<p>Items</p>
<table class="table table-striped table-condensed">
  <tr><th>Title</th> <th>Version</th> <th>Date</th> <th>Windows</th><th>Mac</th></tr>
<%= render @product.items %>
</table>
<%= link_to 'Add item', new_product_item_path(@product) %>

<br/>

<button class='btn btn-primary'><%= link_to 'Edit', edit_product_path(@product)%> </button> |
